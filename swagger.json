{
  "openapi": "3.0.0",
  "info": {
    "title": "URL Shortener API",
    "version": "1.0.0",
    "description": "A comprehensive URL shortening service with QR code generation and email functionality",
    "contact": {
      "name": "API Support",
      "url": "https://github.com/yourusername/url-shortener",
      "email": "support@urlshortener.com"
    }
  },
  "servers": [
    {
      "url": "https://shortly-bngk.onrender.com",
      "description": "Production server"
    }
  ],
  "tags": [
    {
      "name": "URLs",
      "description": "URL shortening operations"
    },
    {
      "name": "Health",
      "description": "Health check endpoints"
    }
  ],
  "paths": {
    "/api/shorten": {
      "post": {
        "tags": ["URLs"],
        "summary": "Shorten a URL",
        "description": "Create a shortened URL with optional QR code generation and email notification",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["originalUrl"],
                "properties": {
                  "originalUrl": {
                    "type": "string",
                    "format": "uri",
                    "description": "The URL to be shortened",
                    "example": "https://www.example.com/very-long-url-that-needs-shortening"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email to send the shortened URL to (optional)",
                    "example": "user@example.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "URL shortened successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Url"
                    },
                    "message": {
                      "type": "string",
                      "example": "URL shortened successfully"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - Invalid URL or missing parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/{code}": {
      "get": {
        "tags": ["URLs"],
        "summary": "Redirect to original URL",
        "description": "Redirect to the original URL using the short code",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "description": "The short URL code",
            "schema": {
              "type": "string",
              "example": "abc123"
            }
          }
        ],
        "responses": {
          "302": {
            "description": "Redirects to the original URL"
          },
          "404": {
            "description": "URL not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/stats/{code}": {
      "get": {
        "tags": ["URLs"],
        "summary": "Get URL statistics",
        "description": "Retrieve statistics for a shortened URL",
        "parameters": [
          {
            "name": "code",
            "in": "path",
            "required": true,
            "description": "The short URL code",
            "schema": {
              "type": "string",
              "example": "abc123"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "URL statistics retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Url"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "URL not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check",
        "description": "Check the health status of the API",
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "OK"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "uptime": {
                      "type": "number",
                      "description": "Server uptime in seconds"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Url": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "description": "The auto-generated id of the URL"
          },
          "originalUrl": {
            "type": "string",
            "format": "uri",
            "description": "The original URL to be shortened"
          },
          "shortUrl": {
            "type": "string",
            "format": "uri",
            "description": "The shortened URL"
          },
          "urlCode": {
            "type": "string",
            "description": "The unique code for the shortened URL"
          },
          "qrCode": {
            "type": "string",
            "description": "Base64 encoded QR code image"
          },
          "clicks": {
            "type": "number",
            "description": "Number of times the short URL has been accessed"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "When the URL was created"
          },
          "lastAccessed": {
            "type": "string",
            "format": "date-time",
            "description": "When the URL was last accessed"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "error": {
            "type": "string",
            "description": "Error message"
          }
        }
      }
    }
  }
}